---
import BaseLayout from "../layouts/BaseLayout.astro";

// Read playlists from coherenceism-ghost project
import { readFileSync } from "fs";
import { resolve } from "path";

let playlists = [];
try {
  const playlistsPath = resolve("../coherenceism-ghost/suno-playlists.json");
  const data = readFileSync(playlistsPath, "utf-8");
  playlists = JSON.parse(data);
} catch (error) {
  console.warn("Could not load suno-playlists.json:", error.message);
}
---

<BaseLayout activeNav="MUSIC">
  <main id="main" class="content-feed">
    <div class="feed-inner">
      <div class="announcement"><div class="announcement-text">MUSIC // COHERENCEISM IN SOUND</div></div>

      <article class="music-page" style="max-width: 1200px; margin: 0 auto; padding: 2rem 0;">

        <div class="music-intro" style="text-align: center; margin-bottom: 3rem;">
          <p style="font-size: 1.125rem; color: var(--text-muted); max-width: 600px; margin: 0 auto 2rem;">
            Albums exploring resonance, alignment, and emergence through sound — philosophical themes expressed in roots reggae, grunge, hip-hop, and electronic atmospheres.
          </p>
          <a href="https://suno.com/@coherentanomaly"
             class="suno-link"
             target="_blank"
             rel="noopener noreferrer"
             style="display: inline-block; background: var(--accent-color, #666); color: var(--bg-primary); padding: 0.75rem 1.5rem; border-radius: 4px; text-decoration: none; font-weight: 600; transition: opacity 0.2s;">
            Listen on Suno →
          </a>
        </div>

        <div class="album-grid" style="display: grid; grid-template-columns: repeat(auto-fill, minmax(280px, 1fr)); gap: 2rem;">
          {playlists.map((playlist) => (
            <article class="album-card" style="border-radius: 8px; overflow: hidden; transition: transform 0.2s, box-shadow 0.2s; background: var(--surface-02); box-shadow: 0 2px 8px rgba(0,0,0,0.2);">
              <a href={playlist.playlistUrl}
                 target="_blank"
                 rel="noopener noreferrer"
                 style="text-decoration: none; color: inherit; display: block;">
                {playlist.coverUrl ? (
                  <img src={playlist.coverUrl}
                       alt={playlist.title}
                       style="width: 100%; aspect-ratio: 1; object-fit: cover; display: block;"
                       loading="lazy" />
                ) : (
                  <div style="width: 100%; aspect-ratio: 1; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);"></div>
                )}
                <div style="padding: 1.25rem;">
                  <h2 style="font-size: 1.25rem; font-weight: 700; margin: 0 0 0.5rem; color: var(--text-primary);">{playlist.title}</h2>
                  {playlist.trackCount && (
                    <p style="font-size: 0.875rem; color: var(--text-muted); margin: 0;">
                      {playlist.trackCount} {playlist.trackCount === 1 ? 'track' : 'tracks'}
                    </p>
                  )}
                </div>
              </a>
            </article>
          ))}
        </div>

      </article>
    </div>
  </main>

  <style>
    .album-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 4px 16px rgba(0,0,0,0.3);
    }

    .suno-link:hover {
      opacity: 0.9;
    }

    @media (max-width: 768px) {
      .album-grid {
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr)) !important;
        gap: 1.5rem !important;
      }
    }
  </style>
</BaseLayout>
